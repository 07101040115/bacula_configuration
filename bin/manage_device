#! /usr/local/bin/python
# Add/remove/update/dump device
from __future__ import print_function

import sys, os
import optparse
from bacula_tools import *
from bacula_tools.util import generic_option_processor

# {{{ Parser configuration and sanity checking.  Also, "bacula" is instantiated in here

parser = optparse.OptionParser(description='Manage Bacula device.', usage='usage: %prog [options] [device]')
parser.add_option('--create', action='store_true',
                   default=False, help='Create the given device')
parser.add_option('--delete', action='store_true',
                   default=False, help='Delete the given device')
parser.add_option('--rename', metavar='NEW_NAME',
                   help='Rename the given device')
parser.add_option('--list', action='store_true',
                   default=False, help='List the available device')

group = optparse.OptionGroup(parser, "Setters",
                             "These options are used for setting various values.  "
                             "Use an empty string, e.g. '' to unset the value for strings variables.  "
                             "You should be aware that no sanity checking is done here, so it is quite possible "
                             "to break your configuration while using them.  Caveat emptor."
                             )

for key in Device.NULL_KEYS: group.add_option('--' + key)
for key in Device.TRUE_KEYS: group.add_option('--' + key[0])
for key in Device.FALSE_KEYS: group.add_option('--' + key[0])

parser.add_option_group(group)

(args, device_arg) = parser.parse_args()
bacula = Bacula_Factory()        # Instantiate our DB connection thingy

if args.delete and (args.create or args.set or args.rename):
    bacula.die('','If you delete then there is no sense in doing anything else.',
               "You didn't think this one out very well, did you?.")

# }}}

if args.list:
    print(bacula.formatted_query_result('select name from %s order by name' % DEVICE, infix='\n'))
    if not device_arg: exit()
if not device_arg:
    parser.print_help()
    exit()

s = Device()
if args.create: s._set_name(device_arg[0])

s.search(device_arg[0])
if not s[ID]:
    print('No such device: %s' % device_arg[0])
    exit()

if args.delete:
    s.delete()
    print('Deleted device:', device_arg[0])
    exit()                      # Nothing to print out now
    
if args.rename: s.change_name(args.rename)

generic_option_processor(s, args, Device.NULL_KEYS)
generic_option_processor(s, args, Device.TRUE_KEYS + Device.FALSE_KEYS, boolean=True)

print('',s, '', sep='\n')
exit()
